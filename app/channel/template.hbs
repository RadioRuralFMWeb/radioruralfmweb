{{title model.title}}

<div class="Sections">
	<section>
		<div class="Manchet u-tc">
			<h1 title={{model.body}}>
				{{#link-to "channel.index" model}}
					{{model.title}}
				{{/link-to}}
			</h1>
		</div>
		<div class="Container Container--noPaddingMobile Container--contentCentered Container--full">
			<nav class="NavMain">
				<div class="Tabs Tabs--horizontal">
					{{#link-to
							 'channel.tracks'
							 class="Tabs-item"
							 title="All tracks [⌨ g t]"}}
						Tracks <span class="Muted">({{model.totalTracks}})</span>
					{{/link-to}}
					{{#if model.selectedHashtags}}
						{{#link-to
								 'channel.tags'
								 class="Tabs-item"
								 title="Tags from this radio's tracks [⌨ g #]"}}
							Tags
						{{/link-to}}
					{{/if}}
					{{#link-to
							 'channel.favorites'
							 class="Tabs-item"
							 title="Favorites of this radio [⌨ g f]"}}
						Favorites
					{{/link-to}}
					{{#if model.canEdit}}
						{{#link-to
								 'channel.followers'
								 class="Tabs-item"
								 title="Followers of this radio"}}
							Followers
						{{/link-to}}
					{{/if}}
				</div>
				{{#if model.canEdit}}
					<div class="Tabs Tabs--horizontal">
						{{#link-to "settings.channel" class="Tabs-item" title="Edit your radio"}}
							&rarr; Settings
						{{/link-to}}
					</div>
				{{/if}}
			</nav>
		</div>
	</section>

	{{outlet 'main'}}
</div>

{{#if editTrack}}
	{{#modal-dialog onClose=(action "stopEditing")}}
		<div class="Sections">
			<section class="Section">
				<div class="Manchet">
					<h2>Edit <small>track</small></h2>
				</div>
				<div class="Container">
					{{track-edit
						track=trackToEdit
						onSubmit=(action "stopEditing")
						onCancel=(action "stopEditing")
						onDelete=(action "stopEditing")
					}}
				</div>
			</section>
		</div>
	{{/modal-dialog}}
{{/if}}
